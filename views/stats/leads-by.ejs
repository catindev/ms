<%
var subtitle = `c ${ moment(range.start).format('D MMM') } по ${ moment(range.end).format('D MMM') }`;

function getTitle() {
    switch ( interval ) {
        case 'weeks':
            return 'Недели';
        case 'months':
            return 'Месяцы';
        default:
            return 'Дни';
    }
}
%>
<!doctype html>
<html>
<head>
    <%- include ../common/page-title.ejs %>
    <link href="assets/css/datepicker.css" rel="stylesheet">
    <style>
        .submenu {
            padding: .5rem 0;
            margin: 0 auto;
            width: 70%;
            max-width: 960px;
        }

        .l-filter {
            display: inline-block;
            border-bottom: 1px solid dashed;
            margin-left: 2px;
            margin-right: 8px;
        }

        .f-active {
            opacity: .5;
            text-decoration: none;
        }

        .f-delimeter {
            display: inline-block;
            color: #ccc;
            margin: 0 4px;
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <%- include ../common/main-menu.ejs %>
    <div class="content">

        <%- include ./submenu.ejs %>

        <div class="title">
            <h1>Эффективность рекламных источников</h1>
        </div>

        <%- include set-interval.ejs %>

        <div class="submenu">
            <a href="/stats/leads" class="l-filter <%= subPage === 'leads' && 'f-active' %>">
                За весь период
            </a>
            <a href="/stats/leads-by" class="l-filter <%= subPage === 'leads-by' && 'f-active' %>">
                По интервалам
            </a>
        </div>

        <div class="form-section">
            <div id="barchart" style="height: 500px;"></div>
        </div>
    </div>
</body>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
    google.charts.load('current', {packages: ['corechart', 'bar']});
    google.charts.setOnLoadCallback(drawTitleSubtitle);

    function drawTitleSubtitle() {
        var data = google.visualization.arrayToDataTable(<%- JSON.stringify(data) %>);

        var options = {
            chart: {
                title: 'Эффективность рекламных источников',
                subtitle: '<%= subtitle %>'
            },
            hAxis: {
                title: 'Количество звонков',
                minValue: 0,
            },
            vAxis: {
                title: '<%= getTitle() %>'
            },
            bars: 'vertical'
        };
        var material = new google.charts.Bar(document.getElementById('barchart'));
        material.draw(data, options);
    }
</script>
</html>