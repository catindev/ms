<% if (field.list.length <= 10) { %>
    <select class="select" name="<%= field.id %>">
        <option value=""></option>
        <% field.list.forEach( function (item, index) { %>
            <option
                value="<%= item %>"
                <% if (contact && contact[field.id] && contact[field.id] === item) { %>
                selected
                <% } %>
            >
                <%= item %>
            </option>
        <% }); %>
    </select>

<% } else { %>

    <input type="text"
           class="search"
           id="field_<%= field.id %>"
           name="<%= field.id %>"
           value="<%= contact && contact[field.id] %>"/>
    <script>
        $( function() {
            $( "#field_<%= field.id %>" ).autocomplete({
                source: <%- JSON.stringify(field.list) %>
            });
        });
    </script>

<% } %>